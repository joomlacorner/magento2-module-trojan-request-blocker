<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\App\FrontControllerInterface">
        <plugin name="magedin_trb_validate_post_request"
                type="MagedIn\TrojanRequestBlocker\Plugin\ValidateTrojanPostRequest" sortOrder="10"/>
    </type>

    <type name="Magento\Customer\Api\AccountManagementInterface">
        <plugin name="magedin_trb_validate_customer_registration"
                type="MagedIn\TrojanRequestBlocker\Plugin\CustomerRegistration" sortOrder="10"/>
    </type>

    <type name="Magento\Checkout\Api\GuestPaymentInformationManagementInterface">
        <plugin name="magedin_trb_validate_guest_customer_registration"
                type="MagedIn\TrojanRequestBlocker\Plugin\GuestCustomerRegistration" sortOrder="10"/>
    </type>

    <type name="Magento\Checkout\Api\PaymentInformationManagementInterface">
        <plugin name="magedin_trb_validate_registered_customer_checkout"
                type="MagedIn\TrojanRequestBlocker\Plugin\RegisteredCustomerCheckout" sortOrder="10"/>
    </type>

    <type name="MagedIn\TrojanRequestBlocker\Service\Patterns\DefaultPatterns">
        <arguments>
            <argument name="patterns" xsi:type="array">
                <item name="10" xsi:type="string">this.getTemplateFilte</item>
                <item name="20" xsi:type="string">.addAfterFilterCallbac</item>
                <item name="30" xsi:type="string">.filter(</item>
                <item name="40" xsi:type="string">.Filter(</item>
                <item name="50" xsi:type="string">gettemplate</item>
                <item name="60" xsi:type="string">base64_</item>
                <item name="70" xsi:type="string">afterfiltercall</item>
                <item name="80" xsi:type="string">magdemo9816@proton.me</item>
            </argument>
        </arguments>
    </type>

    <type name="MagedIn\TrojanRequestBlocker\Service\PatternsLoader">
        <arguments>
            <argument name="loaders" xsi:type="array">
                <item name="default" xsi:type="object">
                    MagedIn\TrojanRequestBlocker\Service\Patterns\DefaultPatterns
                </item>
                <item name="terms_blacklist" xsi:type="object">
                    MagedIn\TrojanRequestBlocker\Service\Patterns\TermsBlacklistPatterns
                </item>
                <item name="config" xsi:type="object">
                    MagedIn\TrojanRequestBlocker\Service\Patterns\ConfigPatterns
                </item>
            </argument>
        </arguments>
    </type>
</config>
